<h1> Sign Up with Your E-mail </h1>

<%= form_for (user) do |f| %>

    <p><%= f.text_field :email, placeholder: "E-mail address" %></p>
    <p><%= f.password_field :password, placeholder: "Password" %></p>
    <p><%= f.password_field :password_confirmation, placeholder: "Confirm password" %></p>
    <p><%= f.text_field :first_name, placeholder: "First name" %></p>
    <p><%= f.text_field :last_name, placeholder: "Last name" %></p>

    <p><%= f.submit "Sign Up" %></p>

<% end %>