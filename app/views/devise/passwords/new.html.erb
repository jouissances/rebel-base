<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: :floating_labels_form) do |f| %>
  <h2 class="center">Forgot your password?</h2>

  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: 'btn btn-lg btn-info' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
