<h1>Edit Club</h1>

<%= simple_form_for @club, 
  wrapper: :floating_labels_form,
  defaults: { input_html: { style: 'height: 50px' } } do |f| %>

  <%= f.error_notification %>

  <%= f.input :name %>

  <%= f.input :genre, collection: ["Science Fiction", "Fantasy", "Adventure", "Mystery", "Drama", "Romance", "Action", "Satire", "Horror", "Comedy", "YA Fiction", "Dystopia", "Thriller", "Classic", "Crime", "Historical", "Non-fiction" ] %>

  <%= f.input :subgenre, as: :string, required: false %>

  <%= f.input :description, as: :string %>
  
  <%= f.input :club_image %>

  <%= f.input :cover_image %>

  <%= f.button :submit, class: "btn-primary" %>
<% end %>