<div class="profile-wrapper">

    <div class="primary-profile">
        <%= image_tag @user.image.url %>

        <h1><%= full_name(@user) %></h1>

        <i class="fas fa-map-marker-alt"></i>
        <%= @user.country_name  %>
    </div>

    <div class="secondary-profile">
        <h2>Bio</h2>
            <%= show_bio(@user) %>
        
        <h2>Clubs</h2>
            <%= show_clubs(@user) %>
    </div>
        
    <div class="social">
        <h2>Find me on</h2>
            <%= show_socials(@user, 'twitter') %>
            <%= show_socials(@user, 'facebook') %>
            <%= show_socials(@user, 'instagram') %>

        <h2>Let's chat on Slack</h2>
            <%= show_socials(@user, 'slack') %>
    </div>

</div>

<p class="narrow center">
    <%= random_book_quote(@quote, @author) %>
</p>

<%= button_to "Edit profile", edit_admin_user_path, { method: 'get', class: 'btn btn-primary' } %>
