<header>
    <div class="logo">
        <%= link_to image_tag("/images/logo.png"), root_path %>
        <%= link_to "Clubs", clubs_path  %>
    </div>
    
    <nav>
        <%= link_to "About", about_path  %>
        
        <% if user_signed_in? %>
            <%= link_to "Membership", memberships_path %>

            <% if current_user.image.cover.url %>
                <%= link_to image_tag(current_user.image.cover.url), admin_user_path(current_user) %>
            <% else %>
                <%= link_to "Profile", admin_user_path(current_user) %>
            <% end %>
            
            <%= link_to "Account", edit_user_registration_path %>
            <%= link_to "Logout", destroy_user_session_path, method: :delete %>
        <% else %>
            <%= link_to "Log In", new_user_session_path %>
            <%= link_to "Sign Up", new_user_registration_path %>
        <% end %>
    </nav>
</header>